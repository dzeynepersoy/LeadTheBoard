@model ErrorViewModel

@{
    ViewData["Title"] = "Error-Development";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExceptionPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExceptionPath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExceptionMessage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExceptionMessage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExceptionStackTrace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExceptionStackTrace)
        </dd>
    </dl>
</div>
