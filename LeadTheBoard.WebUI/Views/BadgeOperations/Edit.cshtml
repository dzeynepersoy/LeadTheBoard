@model BadgeModel

@{
    ViewData["Title"] = "Edit Badge";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" class="form-control" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Current Image</label>
                    <img src="@Model.ImageUrl" class="" width="100" height="100" />
                </div>

                <div class="form-group">
                    <label for="imageFile" class="control-label"></label>
                    <input name="imageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequiredPoints" class="control-label"></label>
                    <input asp-for="RequiredPoints" class="form-control"  />
                    <span asp-validation-for="RequiredPoints" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValidityDateStart" class="control-label"></label>
                    <input asp-for="ValidityDateStart" class="form-control" type="date" />
                    <span asp-validation-for="ValidityDateStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValidityDateEnd" class="control-label"></label>
                    <input asp-for="ValidityDateEnd" class="form-control" type="date" />
                    <span asp-validation-for="ValidityDateEnd" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mb-5">
        <a asp-action="Index">Back to List</a>
    </div>
</div>



